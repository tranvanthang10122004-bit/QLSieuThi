<Window x:Class="QLSieuThi.View.DangKy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSieuThi.View"
        mc:Ignorable="d"
         Title="Register" Height="650" Width="400">
    <Grid Background="#F3F9FB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Đăng Ký" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="20" Foreground="#1565C0"/>

        <!-- Registration Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            

            <Label Content="Tên Đăng Nhập" FontSize="16" Foreground="#0D47A1"/>
            <TextBox x:Name="UsernameTextBox" Width="250" Height="30" FontSize="16" Margin="0,10,0,10"/>

            <Label Content="Mật Khẩu" FontSize="16" Foreground="#0D47A1"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Height="30" FontSize="16" Margin="0,10,0,10"/>

            
            

            <Button Content="Register" Width="100" Height="40" FontSize="16"  Background="#1565C0" Foreground="White" Margin="0,20" Click="Button_Click"/>

            <TextBlock x:Name="ErrorMessageTextBlock" Foreground="Red" Visibility="Collapsed" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
