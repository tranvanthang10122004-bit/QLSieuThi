<Window x:Class="QLSieuThi.View.BangDieuKhien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSieuThi.View"
        mc:Ignorable="d"
        Title="DashBoard" Height="450" Width="800">
    <Grid Background="#F3F9FB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        

        <!-- Tiêu đề -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image  Width="50" Height="50" Margin="0,10" Stretch="Fill"/>
            <TextBlock Text="ManageShop" FontSize="36" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#0D47A1"/>
            <TextBlock Text="Bảng Điều Khiển" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#0D47A1"/>

        </StackPanel>

        <!-- Nút điều hướng -->
        <WrapPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
           
            <Button Width="200" Height="50" Margin="10" Click="Button_Click" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#2196F3" BorderBrush="Transparent" BorderThickness="1" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="Manage Products" Foreground="White" FontSize="18"/>
            </Button>

            <!-- Button "Manage Customers" -->
            <Button Width="200" Height="50" Margin="10" Click="Button_Click_1">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#2196F3" BorderBrush="Transparent" BorderThickness="1" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="Manage Customers" Foreground="White" FontSize="18"/>
            </Button>

            <!-- Button "Manage Orders" -->
            <Button Width="200" Height="50" Margin="10" Click="Button_Click_2" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#2196F3" BorderBrush="Transparent" BorderThickness="1" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="Sales Window" Foreground="White" FontSize="18"/>
            </Button>
            <Button Width="200" Height="50" Margin="10" Click="Button_Click_3" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#2196F3" BorderBrush="Transparent" BorderThickness="1" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="Manage Orders" Foreground="White" FontSize="18"/>
            </Button>
        </WrapPanel>
    </Grid>
</Window>
