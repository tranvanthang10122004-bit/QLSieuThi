<Window x:Class="QLSieuThi.View.ManagerOders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSieuThi.View"
        mc:Ignorable="d"
        Title="ManagerOders" Height="450" Width="800">
    <Grid Background="#E3F2FD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,20">
            <TextBlock Text="Quản lý siêu thị" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10" Foreground="#1565C0"/>
            <TextBlock Text="Quản lý đơn hàng" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10" Foreground="#1565C0"/>
        </StackPanel>

        <!-- Tìm kiếm và điều khiển -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,5,5,5">
            <TextBlock Text="Ngày bắt đầu:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="16" Foreground="#0D47A1"/>
            <DatePicker Name="StartDatePicker" Width="150" Margin="0,0,20,0" FontSize="16" Padding="5" SelectedDateChanged="StartDatePicker_SelectedDateChanged"/>
            <TextBlock Text="Ngày kết thúc:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="16" Foreground="#0D47A1"/>
            <DatePicker Name="EndDatePicker" Width="150" Margin="0,0,20,0" FontSize="16" Padding="5" SelectedDateChanged="EndDatePicker_SelectedDateChanged"/>
            <TextBlock Text="Nhân viên:" VerticalAlignment="Center" Margin="20,0,10,0" FontSize="16" Foreground="#0D47A1"/>
            <ComboBox Name="StaffComboBox" Width="150" FontSize="16" Padding="5" SelectionChanged="StaffComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Danh sách đơn hàng -->
        <ListView Grid.Row="2" Margin="5" Name="ordersListView" SelectionChanged="OrdersListView_SelectionChanged" Background="White" BorderBrush="#1565C0" BorderThickness="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ngày bán" DisplayMemberBinding="{Binding NgayBan}" Width="200"/>
                    <GridViewColumn Header="Tên khách hàng" DisplayMemberBinding="{Binding TenKhachHang}" Width="200"/>
                    <GridViewColumn Header="Tài khoản nhân viên" DisplayMemberBinding="{Binding TaiKhoanNhanVien}" Width="200"/>
                    <GridViewColumn Header="Tổng tiền" DisplayMemberBinding="{Binding TongTien, StringFormat=C}" Width="150"/>
                    <GridViewColumn Header="Phương thức thanh toán" DisplayMemberBinding="{Binding PhuongThucThanhToan}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Chi tiết đơn hàng -->
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="20">
            <TextBlock Text="Chi tiết đặt hàng" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1565C0"/>
            <TextBlock x:Name="OrderIdTextBlock" FontWeight="Bold" FontSize="16" Foreground="#0D47A1"/>
            <TextBlock x:Name="CustomerNameTextBlock" FontSize="16" Foreground="#0D47A1"/>
            <TextBlock x:Name="EmployeeNameTextBlock" FontSize="16" Foreground="#0D47A1"/>
            <TextBlock x:Name="TotalAmountTextBlock" FontSize="16" Foreground="#0D47A1"/>
            <TextBlock x:Name="PaymentMethodTextBlock" FontSize="16" Foreground="#0D47A1"/>
            <TextBlock x:Name="OrderItemsTextBlock" FontSize="16" Foreground="#0D47A1" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
