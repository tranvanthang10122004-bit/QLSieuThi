<Window x:Class="QLSieuThi.View.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSieuThi.View"
        mc:Ignorable="d"
         Title="login" Height="450" Width="800">
    <Grid Background="#E6F0FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="logo.png" Width="50" Height="50" />
            <TextBlock Text="ManageShop" FontSize="34" FontWeight="Bold" Foreground="#1E88E5" />
        </StackPanel>

        <!-- Login Form -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="15" 
                Padding="40" 
                Margin="100,20"
                BorderBrush="#90CAF9" 
                BorderThickness="2"
                VerticalAlignment="Top" 
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Đăng nhập" FontSize="28" FontWeight="Bold" Foreground="#1565C0" TextAlignment="Center" Margin="0,0,0,25"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Label Content="Tên đăng nhập :" Width="150" VerticalAlignment="Center" FontSize="20" Foreground="#0D47A1"/>
                    <TextBox x:Name="usernameTextBox" Width="220" FontSize="20" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Label Content="Mật khẩu:" Width="150" VerticalAlignment="Center" FontSize="20" Foreground="#0D47A1"/>
                    <PasswordBox x:Name="passwordBox" Width="220" FontSize="20"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Đăng Nhập" Width="110" Height="auto" Margin="0,0,20,0"
                            Background="#2196F3" Foreground="White" FontSize="18" 
                            BorderBrush="Transparent" Click="Button_Click" />

                    <Button Content="Đăng Ký" Width="110" Height="auto"
                            Background="#E3F2FD" Foreground="#0D47A1" FontSize="18" 
                            BorderBrush="#90CAF9" Click="Button_Click_1" />
                </StackPanel>

                <TextBlock x:Name="errorMessageTextBlock" 
                           Foreground="Red" 
                           Margin="0,15,0,0" 
                           TextAlignment="Center"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
