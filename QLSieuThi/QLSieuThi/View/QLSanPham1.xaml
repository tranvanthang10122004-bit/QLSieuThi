<Window x:Class="QLSieuThi.View.QLSanPham1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSieuThi.View"
        mc:Ignorable="d"
        Title="QLSanPham1" Height="750" Width="1200">

    <Grid Background="#E3F2FD" Loaded="Grid_Loaded" Margin="0,0,-0.4,-54.2" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,20">
            <TextBlock Text="ManageShop" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10" Foreground="#1565C0"/>
            <TextBlock Text="Quản Lý Sản Phẩm" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10" Foreground="#1565C0"/>
            <Button x:Name="btn_Back" Content="Trở lại" Margin="10" Click="Btn_Back_Click"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box and Label -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20">
                <Label Content="Search:" VerticalAlignment="Center" FontSize="20" Margin="0,0,10,0" Foreground="#0D47A1"/>
                <TextBox Name="searchTextBox" Width="300" Height="30" FontSize="16"  Padding="5" BorderBrush="#0D47A1" TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>

            <!-- Category ComboBox and Label -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20">
                <Label Content="Danh Mục:" VerticalAlignment="Center" FontSize="20" Margin="0,0,10,0" Foreground="#0D47A1"/>
                <ComboBox Name="CategoryComboBox" Width="300" Height="30" FontSize="16"  Padding="5"/>
            </StackPanel>
        </Grid>



        <!-- Danh sách sản phẩm và các điều khiển -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Danh sách sản phẩm -->
            <DataGrid x:Name="productsDataGrid"
          Grid.Row="0"
          Grid.Column="0"
          Margin="5"
          AutoGenerateColumns="False"
          Background="White"
          BorderBrush="#1565C0"
          BorderThickness="2"
          IsReadOnly="True"
         
          
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSP}" Width="*"/>
                    <DataGridTextColumn Header="Tên SP" Binding="{Binding TenSP}" Width="2*"/>
                    <DataGridTextColumn Header="Mã DM" Binding="{Binding MaDM}" Width="*"/>
                    <DataGridTextColumn Header="Giá" Binding="{Binding Gia}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <!-- Các điều khiển nhập liệu -->
            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock Text="Mã Sản Phẩm:" Margin="0,0,0,5" FontSize="16" Foreground="#0D47A1"/>
                <TextBox Name="txt_MaSP" Margin="0,0,0,15" Width="300" FontSize="16" Padding="5"/>

                <TextBlock Text="Mã Danh Mục:" Margin="0,0,0,5" FontSize="16" Foreground="#0D47A1"/>
                <ComboBox Name="cb_MaDM" Margin="0,0,0,15" Width="300" FontSize="16" Padding="5"/>

                <TextBlock Text="Tên Sản Phẩm:" Margin="0,0,0,5" FontSize="16" Foreground="#0D47A1"/>
                <TextBox Name="txt_TenSP" Margin="0,0,0,15" Width="300" FontSize="16" Padding="5"/>

                <TextBlock Text="Đơn giá:" Margin="0,0,0,5" FontSize="16" Foreground="#0D47A1"/>
                <TextBox Name="txt_DonGia" Margin="0,0,0,20" Width="300" FontSize="16" Padding="5"/>

                

                <!-- Các nút điều khiển -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Button Content="Add" Width="80" Margin="10" FontSize="16" Background="#0D47A1" Foreground="White" Click="Button_Click" />
                    <Button Content="Update" Width="80" Margin="10" FontSize="16" Background="#0D47A1" Foreground="White" Click="Button_Click_2"/>
                    <Button Content="Delete" Width="80" Margin="10" FontSize="16" Background="#0D47A1" Foreground="White" Click="Button_Click_1" />
                    <Button Content="Clear" Width="80" Margin="10" FontSize="16" Background="#0D47A1" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
